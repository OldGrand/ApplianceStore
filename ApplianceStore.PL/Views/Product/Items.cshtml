@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table_price">
    <caption>Product</caption>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountInStock)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/images/pict/@item.Photo" class="product__image" />
            </td>
            <td>
                @item.Title
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Manufacturer
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.CountInStock
            </td>
            <td>
                <form asp-controller="Product" asp-route-id="@item.Id" asp-action="Delete" method="post">
                    <button type="submit" class="table__button">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">
    <div class="add__button"></div>
</a>

@section Scripts {
    <script src="~/js/Events.js"></script>
}