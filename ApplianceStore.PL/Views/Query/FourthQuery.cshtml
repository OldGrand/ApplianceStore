@model GenericIntViewModel<ProductViewModel>

<form asp-action="FourthQuery" asp-controller="Query" method="post" class="main__form">
    <div class="form-group">
        <label asp-for="Integer" class="control-label">Value</label>
        <input type="number" asp-for="Integer" class="form-control" />
        <span asp-validation-for="Integer"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="table__button" />
    </div>
</form>

<table class="table_price">
    <caption>Результат</caption>
    <tr>
        <th>
            Title
        </th>
        <th>
            Price
        </th>
    </tr>
    @if (Model.Source != null)
    {
        foreach (var item in Model.Source)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Price
                </td>
            </tr>
        }
    }
</table>